<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Basket">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_totally_blurred_">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="152dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/darkcircle"

            android:padding="15dp"
            android:src="@drawable/ic_baseline_shopping_basket_24"
            app:layout_constraintBottom_toTopOf="@+id/order"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/whitelinearlayoutbg"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.65">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/restaurantNameBasketStr"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/testRestaurantBasketStr"
                android:textColor="#000000"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orderIdTxt"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:stretchColumns="1"
                android:id="@+id/orderDetails">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/itemBasketRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/testItemBasketStr"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/priceBasketRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/testPriceBasketStr"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textAlignment="textEnd"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/item2BasketRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/testItem2BasketStr"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/price2BasketRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/testPrice2BasketStr"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textAlignment="textEnd"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="0">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="2dp"
                        android:background="#A3000000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginVertical="2dp"
                        android:background="#A3000000" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/totalTxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/totalBasketStr"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/totalAmount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/testPrice3BasketStr"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textAlignment="textEnd"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp">

                    <TextView
                        android:id="@+id/gateTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gateBasketStr"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/gatesspinnerView"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:textAlignment="textEnd"/>

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/timeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/timeBasketStr"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/timespinnerView"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:textAlignment="textEnd"/>
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/placeOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#818181"
                android:text="@string/placeOrderBasketStr"
                app:rippleColor="#070707"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>